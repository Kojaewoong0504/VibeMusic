# 환경 설정 예제 파일
# 실제 사용 시 환경별 .env 파일로 복사하여 사용
# 개발: .env.dev, 스테이징: .env.staging, 프로덕션: .env.prod

# 애플리케이션 설정
APP_NAME="VibeMusic API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"

# 서버 설정
HOST="0.0.0.0"
PORT=8000

# 데이터베이스 설정
DATABASE_URL="postgresql+asyncpg://vibemusic:password@localhost:5432/vibemusic"
DATABASE_ECHO=False
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis 설정
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=20

# JWT 보안 설정
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI 음악 생성 API 설정
AI_MUSIC_API_URL="https://api.musicgen.example.com"
AI_MUSIC_API_KEY="your-ai-api-key"
AI_MUSIC_TIMEOUT=30
AI_MUSIC_RETRY_COUNT=3
AI_MUSIC_MAX_REQUESTS_PER_MINUTE=100

# WebSocket 설정
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
WS_TIMEOUT=30
WS_PING_INTERVAL=25
WS_PING_TIMEOUT=60

# 로깅 설정
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="logs/vibemusic.log"
LOG_ROTATION="1 day"
LOG_RETENTION="30 days"

# CORS 설정
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
CORS_ALLOW_CREDENTIALS=True
CORS_MAX_AGE=86400

# 서버 설정
RELOAD=True
WORKERS=1

# 보안 설정
TRUSTED_PROXIES=""
SECURE_HEADERS=False
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# 모니터링 설정
ENABLE_METRICS=False
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
SENTRY_DSN=""
SENTRY_SAMPLE_RATE=1.0

# 파일 업로드 설정
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH="uploads"
ALLOWED_EXTENSIONS="mp3,wav,ogg"
ENABLE_VIRUS_SCAN=False

# 캐시 설정
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 데이터 보관 정책
USER_DATA_RETENTION_HOURS=24
SESSION_DATA_RETENTION_HOURS=12
TEMP_FILE_CLEANUP_HOURS=6