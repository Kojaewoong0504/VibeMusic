# 개발 환경 설정
APP_NAME="VibeMusic API (Development)"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT="development"

# 서버 설정
HOST="0.0.0.0"
PORT=8000

# 데이터베이스 설정 (개발용 - 로컬)
DATABASE_URL="postgresql+asyncpg://vibemusic:dev_password@localhost:5432/vibemusic_dev"
DATABASE_ECHO=True
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis 설정 (개발용)
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=20

# JWT 보안 설정 (개발용 - 짧은 만료시간)
SECRET_KEY="dev-secret-key-not-for-production-use-only"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60

# AI 음악 생성 API 설정 (개발용 - 테스트 키)
AI_MUSIC_API_URL="https://api.musicgen.example.com/dev"
AI_MUSIC_API_KEY="dev_test_api_key"
AI_MUSIC_TIMEOUT=30
AI_MUSIC_RETRY_COUNT=3

# WebSocket 설정 (개발용)
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100
WS_TIMEOUT=30

# 로깅 설정 (개발용 - 상세)
LOG_LEVEL="DEBUG"
LOG_FORMAT="detailed"
LOG_FILE="logs/vibemusic-dev.log"
LOG_ROTATION="1 day"
LOG_RETENTION="7 days"

# CORS 설정 (개발용 - 관대한 설정)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173"
CORS_ALLOW_CREDENTIALS=True

# 개발 도구 설정
RELOAD=True
WORKERS=1

# 테스트용 설정
TEST_DATABASE_URL="postgresql+asyncpg://vibemusic:test_password@localhost:5432/vibemusic_test"
ENABLE_TEST_ROUTES=True

# 모니터링 (개발용)
ENABLE_PROFILER=True
ENABLE_METRICS=True
METRICS_PORT=9090

# 파일 업로드 설정 (개발용)
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_PATH="uploads/dev"
ALLOWED_EXTENSIONS="mp3,wav,ogg"